@model IEnumerable<OnRodeassisment.Models.Technician_InfoModel>

@{
    ViewData["Title"] = "Technicians List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Technician ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Specialization</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var technician in Model)
        {
            <tr>
                <td>@technician.TechnicianId</td>
                <td>@technician.Name</td>
                <td>@technician.Email</td>
                <td>@technician.Specialization</td>
                <td>@technician.Location</td>
                <td>
                    <a href="@Url.Action("SendComplaint", "Technician", new { id = technician.TechnicianId })" class="btn btn-primary">Send Complaint</a>
                </td>
            </tr>
        }
    </tbody>
</table>
